---
import planets from "@/assets/data/planets.json";
import chevron from "@/assets/img/icon-chevron.svg";
---

<div class="flex-1">
	<h1 class="pl-4 text-xl uppercase">The Planets</h1>
</div>
<div class="drawer drawer-end w-fit">
	<input id="planet-menu" type="checkbox" class="drawer-toggle" />
	<div transition:persist class="drawer-content">
		<label
			for="planet-menu"
			class="btn btn-square btn-ghost drawer-button z-20"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				class="inline-block h-5 w-5 stroke-current"
				><path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path></svg
			>
		</label>
	</div>
	<div
		transition:persist
		class="drawer-side z-10 bg-transparent"
		style={{
			height: "calc(100% - 56px)",
			transform: "translateY(56px)",
		}}
	>
		<ul class="menu min-h-full w-full bg-base p-4 text-white">
			{
				planets.map(({ name, color }) => {
					return (
						<li>
							<a
								class="h-fit"
								rel="prefetch"
								href={`/${name.toLowerCase()}/overview`}
							>
								<div
									style={{
										backgroundColor: color,
									}}
									class="h-5 w-5 rounded-full"
								/>
								{name}
								<img src={chevron.src} class="ml-auto mr-0" />
							</a>
						</li>
					);
				})
			}
		</ul>
	</div>
</div>
